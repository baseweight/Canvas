{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "baseweightcanvas",
  "version": "0.1.0",
  "identifier": "ai.baseweight.canvas",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splash",
        "title": "Baseweight Canvas",
        "url": "splash.html",
        "width": 600,
        "height": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "skipTaskbar": true,
        "visible": true
      },
      {
        "label": "main",
        "title": "Baseweight Canvas",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [
        "libs/darwin-arm64/libllama.0.dylib",
        "libs/darwin-arm64/libmtmd.0.dylib",
        "libs/darwin-arm64/libggml.0.dylib"
      ]
    }
  }
}
